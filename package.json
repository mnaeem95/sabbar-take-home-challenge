{
  "name": "sabbar-take-home-challenge",
  "version": "0.0.1",
  "description": "sabbar-take-home-challenge",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node dist/server.js",
    "start:cli": "npm run build && node dist/index.js match",
    "dev": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "build": "npm run lint && npm run format && tsc",
    "clean": "rimraf coverage dist tmp",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "tslint --project .",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged"
  },
  "author": "Muhammad Naeem",
  "license": "ISC",
  "dependencies": {
    "body-parser": "1.19.0",
    "chalk": "^4.1.0",
    "class-transformer": "0.2.3",
    "class-validator": "0.9.1",
    "cli-alerts": "^1.2.2",
    "cli-check-node": "^1.3.4",
    "cli-handle-unhandled": "^1.1.1",
    "cli-table3": "^0.6.0",
    "cli-welcome": "^2.2.2",
    "cors": "2.8.5",
    "dotenv": "7.0.0",
    "express": "4.17.1",
    "geolib": "^3.3.1",
    "meow": "^7.1.1",
    "mongoose": "5.8.11",
    "morgan": "^1.10.0",
    "ora": "^5.1.0",
    "reflect-metadata": "0.1.13",
    "stoppable": "1.1.0",
    "tslint-config-prettier": "1.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.4",
    "@types/jest": "^23.3.12",
    "@types/mongoose": "^5.7.1",
    "husky": "^2.3.0",
    "jest": "~23.6.0",
    "lint-staged": "^8.1.7",
    "nodemon": "^1.18.11",
    "prettier": "^1.19.1",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.4.4"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
